<footer class="flex">
	<div class="w-full py-5 wrapper-x md:py-6 xl:py-8">
		<div class="flex flex-wrap justify-end text-sm md:text-base text-mono-300">
			{% for item in settings.footer %}
				<div class="ml-5">{{ item.item | markdownToHtml | safe }}</div>
			{% endfor %}
		</div>
	</div>

	{% if settings.cookies %}
		<div	class="fixed bottom-0 right-0 z-20"
				x-cloak
				x-data="{ cookies: localStorage.getItem('moderncollab_cookies') }"
				x-init="$watch('cookies', (val) => localStorage.setItem('moderncollab_cookies', val))"
				x-show="cookies !== '0'"
				x-transition:leave="transition ease-in duration-300"
				x-transition:leave-end="opacity-0 transform translate-y-3"
		>
			<div class="flex items-start max-w-lg mx-3 mb-3 rounded-lg shadow bg-mono-50">
				<div class="px-6 py-4 text-sm leading-normal md:text-base">{{ settings.cookies | markdownToHtml | safe }}</div>
				<button class="mt-1" @click="cookies = '0'" aria-label="Close cookies notice">{{ "/_includes/assets/img/cross.svg" | svgContents("w-12") | safe }}</button>
			</div>
		</div>

		{# Delete current cookies #}
		{# <script>localStorage.removeItem('moderncollab_cookies');</script> #}
	{% endif %}

</footer>