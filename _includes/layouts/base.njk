<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en" class="h-full">

	<head>
		<title>{{ title or seo.name }}</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="{{ seo.description }}">

		<link rel="dns-prefetch" href="https://identity.netlify.com">
		<link rel="stylesheet" href="/assets/css/style.css?v={% version %}"/>
		<link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@500&family=Open+Sans&display=swap" rel="stylesheet">

		<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
		<link rel="manifest" href="/assets/favicons/site.webmanifest">
		<link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg" color="#ffd35d">
		<link rel="shortcut icon" href="/assets/favicons/favicon.ico">
		<meta name="msapplication-TileColor" content="#525252">
		<meta name="msapplication-config" content="/assets/favicons/browserconfig.xml">
		<meta name="theme-color" content="#ffd35d">

		<script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
		<script src="/assets/js/alpine.js" async></script>
		<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);})(window,document,'script','dataLayer','GTM-565ZMXD');</script>
	</head>

	<body	class="flex flex-col h-full leading-7 text-mono-700 font-body bg-mono-50 lg:text-lg lg:leading-8"
			x-data="{
				menu: false, 
				scrolled: false,
				showModal: false,
				windowWidth: window.innerWidth
			}"
    		:class="{ 'overflow-hidden': menu }"
			@resize.window="windowWidth = window.innerWidth"
    		{# @scroll.window="scrolled = (window.pageYOffset > 0) ? true : false" #}
    		@keydown.escape="showModal = false">

		{% include "partials/header.njk" %}

		<main class="h-full">
			{{ layoutContent | safe }}
			{% include "partials/footer.njk" %}
		</main>
		
		
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-565ZMXD" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
	</body>

</html>